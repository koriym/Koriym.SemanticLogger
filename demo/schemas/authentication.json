{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://koriym.github.io/Koriym.SemanticLogger/schemas/authentication.json",
  "title": "Authentication Context",
  "description": "Context for user authentication operations",
  "type": "object",
  "properties": {
    "method": {
      "type": "string",
      "enum": ["JWT", "OAuth", "BasicAuth", "APIKey", "Session"],
      "description": "Authentication method used"
    },
    "userId": {
      "type": ["string", "null"],
      "description": "Authenticated user ID (null if authentication failed)"
    },
    "claims": {
      "type": "object",
      "additionalProperties": true,
      "description": "User claims and permissions"
    },
    "success": {
      "type": "boolean",
      "description": "Whether authentication was successful"
    },
    "duration": {
      "type": "number",
      "minimum": 0,
      "description": "Authentication duration in seconds"
    }
  },
  "required": ["method", "success", "duration"],
  "additionalProperties": false
}