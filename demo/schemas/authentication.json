{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://koriym.github.io/Koriym.SemanticLogger/schemas/authentication.json",
  "title": "Authentication Context",
  "description": "Context for user authentication operations",
  "type": "object",
  "properties": {
    "method": {
      "type": "string",
      "enum": ["JWT", "OAuth", "BasicAuth", "APIKey", "Session"],
      "description": "Authentication method used"
    },
    "token": {
      "type": ["string", "null"],
      "description": "Authentication token (null if not provided or failed)"
    },
    "requestMetadata": {
      "type": ["object", "array"],
      "additionalProperties": true,
      "description": "Authentication request metadata and claims"
    },
    "success": {
      "type": "boolean",
      "description": "Whether authentication was successful"
    },
    "duration": {
      "type": "number",
      "minimum": 0,
      "description": "Authentication duration in seconds"
    }
  },
  "required": ["method"],
  "additionalProperties": true
}