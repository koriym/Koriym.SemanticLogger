{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://koriym.github.io/Koriym.SemanticLogger/schemas/options-response.json",
  "title": "BEAR.Resource OPTIONS Response",
  "description": "Schema for BEAR.Resource OPTIONS method response - provides API documentation for available resource methods",
  "type": "object",
  "patternProperties": {
    "^(GET|POST|PUT|DELETE|PATCH|HEAD|OPTIONS)$": {
      "oneOf": [
        {
          "type": "array",
          "maxItems": 0,
          "description": "Empty array when method is not supported"
        },
        {
          "type": "object",
          "properties": {
            "summary": {
              "type": "string",
              "description": "Brief summary of what this method does"
            },
            "description": {
              "type": "string",
              "description": "Detailed description of the method behavior"
            },
            "parameters": {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                  "type": "object",
                  "properties": {
                    "description": {
                      "type": "string",
                      "description": "Parameter description"
                    },
                    "type": {
                      "type": "string",
                      "enum": ["string", "integer", "number", "boolean", "array", "object"],
                      "description": "Parameter type"
                    },
                    "default": {
                      "description": "Default value for the parameter"
                    },
                    "enum": {
                      "type": "array",
                      "description": "Allowed values for the parameter"
                    },
                    "format": {
                      "type": "string",
                      "description": "String format (e.g., email, uri, date-time)"
                    }
                  },
                  "required": ["description", "type"],
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "required": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of required parameters"
            },
            "responses": {
              "type": "object",
              "description": "Expected response formats by status code",
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "GET": {
        "summary": "User",
        "description": "Returns a variety of information about the user specified by the required $id parameter",
        "parameters": {
          "id": {
            "description": "User ID",
            "type": "string"
          }
        },
        "required": ["id"]
      },
      "POST": {
        "parameters": {
          "id": {
            "description": "id",
            "type": "integer"
          },
          "name": {
            "description": "name",
            "type": "string",
            "default": "default_name"
          },
          "age": {
            "description": "age",
            "type": "integer",
            "default": 99
          }
        },
        "required": ["id"]
      },
      "DELETE": []
    }
  ]
}